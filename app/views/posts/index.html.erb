<div class="container panel-group">
  <% @posts.each do |post|%>
    <div class="col-sm-4 post">
      <div class="panel panel-primary " value="<%= post.id %>">
        <div class="panel-heading clearfix"><%= post.title%>
          <% if post.user == current_user %>
            <div class="pull-right btn btn-danger btn-sm delete_post_btn" data-toggle="modal" data-target="#confirmPostDeleteModal" remote="true" style="display: none" value="<%= post.id %>"><i class="fa fa-trash-o" aria-hidden="true"></i></div>
          <% end %>
        </div>
        <div class="panel-body posts_panel" data-toggle="modal" data-target="#showPicDetailsModal" remote="true" value="<%= post.id %>"><img src="<%=post.pic_url.url%>" class="img-responsive"></div>
      </div>
    </div>
  <% end if @posts.present? %>
</div>
<div class="modal fade" id="showPicDetailsModal" role="dialog"></div>
<div class="modal fade" id="confirmPostDeleteModal" role="dialog"></div>